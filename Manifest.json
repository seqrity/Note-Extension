{
  "manifest_version": 3,
  "name": "Note ++",
  "version": "1.0",
  "description": "Save your text",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon64.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "storage", 
    "clipboardWrite"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon64.png",
    "128": "icon128.png"
  }
}